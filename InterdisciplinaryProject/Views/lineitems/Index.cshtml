@model IEnumerable<InterdisciplinaryProject.lineitem>

@{
    ViewBag.Title = "Index";
}

<div class="format page-format">

    <div class="basket">
        <div class="basket-top">
            <h4>Basket</h4>
        </div>
        <div class="basket-container">
            <table>
                <thead>
                    <tr>
                        <th>Qty</th>
                        <th>Product Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody class="basket-content">
                </tbody>

            </table>
        </div>
        <div class="basket-bottom">
            <p><strong class="total-price">Total: </strong></p>
            <button class="btn-primary">To checkout</button>
        </div>
    </div>

    <div style="width: 80%;">

        <h1 class="products">Products</h1>
        
        @foreach (var item in Model)
        {
            @Html.Partial("_productPartialView", item);
        }
    </div>

    <div style="clear: both;"></div>
    

</div>